<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}GSM
			{% endblock %}
		</title>

		{# Bootstrap + FontAwesome (CDN simple) #}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
		<link
		href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

		{# TON CSS #}
		<link rel="stylesheet" href="{{ asset('assets/css/app.css') }}"> {% block stylesheets %}{% endblock %}
		</head>

		<body class="{% block body_class %}{% endblock %} d-flex flex-column min-vh-100">

			{% include 'partials/_header.html.twig' %}

			<main
				class="flex-grow-1 pt-5">
				{# pt-5 car navbar fixed-top #}
				{% block body %}{% endblock %}
			</main>

			{% include 'partials/_footer.html.twig' %}

			{# Bootstrap JS #}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

			{# TON JS #}
			<script src="{{ asset('assets/js/app.js') }}"></script>

			{% block javascripts %}{% endblock %}
		</body>
	</html>
