{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ product.name }}</h1>
    <p>{{ product.description }}</p>

    <section>
        <h2>Variantes</h2>
        <ul>
            {% for variant in product.variants %}
                <li>
                    <strong>{{ variant.label }}</strong> - {{ variant.price.ttc }} {{ variant.price.currency }}
                    {% if variant.unit %} ({{ variant.unit }}){% endif %}
                </li>
            {% endfor %}
        </ul>
    </section>

    <section>
        <h2>Stocks</h2>
        <ul>
            {% for stock in stocks %}
                <li>{{ stock.magasinId }} : {{ stock.quantity }}</li>
            {% else %}
                <li>Pas de stock disponible.</li>
            {% endfor %}
        </ul>
    </section>
{% endblock %}
