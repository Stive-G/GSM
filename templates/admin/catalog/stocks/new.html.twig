{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %}Nouvelle ligne de stock
{% endblock %}
{% block content_title %}Nouvelle ligne de stock
{% endblock %}

{% block main %}
	<div class="content-panel">
		<form method="post">
			<div class="row">
				<div class="col-md-8 mb-3">
					<label class="form-label">Produit</label>
					<select name="productId" class="form-select" required>
						<option value="">— Sélectionner un produit —</option>
						{% for p in products %}
							<option value="{{ p.id }}">
								{{ p.label }}
								{% if p.sku %}
									({{ p.sku }})
								{% endif %}
							</option>
						{% endfor %}
					</select>
					<small class="text-muted">
						Liste limitée aux 100 premiers produits.
					</small>
				</div>

				<div class="col-md-4 mb-3">
					<label class="form-label">Quantité</label>
					<input type="number" step="0.01" name="quantity" class="form-control" value="0">
				</div>
			</div>

			<div class="mt-3">
				<button class="btn btn-primary">
					<i class="fa fa-save me-1"></i>Enregistrer
				</button>
				<a href="{{ path('admin_catalog_stocks_index') }}" class="btn btn-secondary">
					Annuler
				</a>
			</div>
		</form>
	</div>
{% endblock %}
