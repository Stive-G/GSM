{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
	Modifier stock –
	{{ productLabel }}
{% endblock %}

{% block main %}
	<div class="content-panel">
		<form method="post">
			<div class="mb-3">
				<label class="form-label">Produit</label>
				<input type="text" class="form-control" value="{{ productLabel }} [{{ productId }}]" readonly>
			</div>

			<div class="mb-3">
				<label class="form-label">Quantité</label>
				<input type="number" step="0.01" name="quantity" class="form-control" value="{{ quantity }}">
			</div>

			<div class="mt-3">
				<button class="btn btn-primary">
					<i class="fa fa-save me-1"></i>Mettre à jour
				</button>
				<a href="{{ path('admin_catalog_stocks_index') }}" class="btn btn-secondary">
					Retour
				</a>
			</div>
		</form>
	</div>
{% endblock %}
