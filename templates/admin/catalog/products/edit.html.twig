{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
	Éditer le produit :
	{{ product.label }}
{% endblock %}

{% block main %}
<div class="content-panel">

	<form method="post">
		<div
			class="row">
			{# ───────── COLONNE GAUCHE ───────── #}
			<div class="col-md-6">
				<div class="mb-3">
					<label class="form-label">SKU</label>
					<input type="text" name="sku" class="form-control" value="{{ product.sku }}" required>
				</div>

				<div class="mb-3">
					<label class="form-label">Libellé</label>
					<input type="text" name="label" class="form-control" value="{{ product.label }}" required>
				</div>

				<div class="mb-3">
					<label class="form-label">Catégorie</label>
					<select name="categoryId" class="form-select">
						<option value="">(aucune)</option>
						{% for cat in categories %}
							{% set cid = cat.id ?? cat._id %}
							<option value="{{ cid }}" {{ product.categoryId == cid ? 'selected' }}>
								{{ cat.name ?? cat.label }}
							</option>
						{% endfor %}
					</select>
				</div>

				<div class="mb-3">
					<label class="form-label">Unité</label>
					<input type="text" name="unit" class="form-control" value="{{ product.unit }}" placeholder="pièce, sac, palette…">
				</div>

				<div class="row mb-3">
					<div class="col">
						<label class="form-label">Prix HT</label>
						<input type="number" step="0.01" name="price_ht" class="form-control" value="{{ price_ht }}">
					</div>
					<div class="col">
						<label class="form-label">Prix TTC</label>
						<input type="number" step="0.01" name="price_ttc" class="form-control" value="{{ price_ttc }}">
					</div>
				</div>
			</div>

			{# ───────── COLONNE DROITE ───────── #}
			<div class="col-md-6">
				<div class="mb-3">
					<label class="form-label">Description (détails)</label>
					<textarea name="description" rows="4" class="form-control">{{ description }}</textarea>
				</div>

				{# === CARACTÉRISTIQUES DYNAMIQUES === #}
				<div class="mb-3">
					<label class="form-label">Caractéristiques techniques</label>
					<div id="attributes-container">
						{% set attrs = attributes ?? {} %}
						{% if attrs is not empty %}
							{% for key, value in attrs %}
								<div class="row g-2 mb-2 attribute-row">
									<div class="col-5">
										<input type="text" name="attribute_keys[]" class="form-control" placeholder="Nom (ex: longueur_mm)" value="{{ key }}">
									</div>
									<div class="col-6">
										<input type="text" name="attribute_values[]" class="form-control" placeholder="Valeur (ex: 500)" value="{{ value }}">
									</div>
									<div class="col-1 d-flex align-items-center">
										<button type="button" class="btn btn-outline-danger btn-sm btn-remove-attribute">
											<i class="fa fa-times"></i>
										</button>
									</div>
								</div>
							{% endfor %}
						{% else %}
							{# au moins une ligne vide par défaut #}
							<div class="row g-2 mb-2 attribute-row">
								<div class="col-5">
									<input type="text" name="attribute_keys[]" class="form-control" placeholder="Nom (ex: longueur_mm)">
								</div>
								<div class="col-6">
									<input type="text" name="attribute_values[]" class="form-control" placeholder="Valeur (ex: 500)">
								</div>
								<div class="col-1 d-flex align-items-center">
									<button type="button" class="btn btn-outline-danger btn-sm btn-remove-attribute">
										<i class="fa fa-times"></i>
									</button>
								</div>
							</div>
						{% endif %}
					</div>

					<button type="button" id="add-attribute" class="btn btn-sm btn-outline-primary mt-1">
						<i class="fa fa-plus me-1"></i>
						Ajouter une caractéristique
					</button>
				</div>

				<div class="mb-3">
					<label class="form-label">Images (une URL par ligne)</label>
					<textarea name="images" rows="4" class="form-control">{{ images_text }}</textarea>
				</div>
			</div>
		</div>

		<div class="mt-3">
			<button class="btn btn-primary">
				<i class="fa fa-save me-1"></i>Mettre à jour
			</button>
			<a href="{{ path('admin_catalog_products_index') }}" class="btn btn-secondary">Retour</a>
		</div>
	</form>

</div>

{% block body_javascript %}
	{{ parent() }}
	<script src="{{ asset('assets/js/catalog-attributes.js') }}"></script>
{% endblock %}
