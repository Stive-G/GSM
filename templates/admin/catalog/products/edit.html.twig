{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %}Éditer le produit
{% endblock %}
{% block content_title %}
	Éditer le produit :
	{{ product.label }}
{% endblock %}

{% block main %}
	<div class="content-panel">
		<form method="post" enctype="multipart/form-data">

			<div class="row">
				<div class="col-md-6">
					<div class="mb-3">
						<label class="form-label">SKU</label>
						<input type="text" name="sku" class="form-control" value="{{ product.sku }}" required>
					</div>

					<div class="mb-3">
						<label class="form-label">Libellé</label>
						<input type="text" name="label" class="form-control" value="{{ product.label }}" required>
					</div>

					<div class="mb-3">
						<label class="form-label">Catégorie</label>
						<select name="categoryId" class="form-select">
							<option value="">(aucune)</option>
							{% for cat in categories %}
								{% set cid = cat.id ?? cat._id %}
								<option value="{{ cid }}" {{ product.categoryId == cid ? 'selected' }}>
									{{ cat.name ?? cat.label }}
								</option>
							{% endfor %}
						</select>
					</div>

					<div class="mb-3">
						<label class="form-label">Unité</label>
						<input type="text" name="unit" class="form-control" value="{{ product.unit }}">
					</div>

					<div class="row mb-3">
						<div class="col">
							<label class="form-label">Prix HT</label>
							<input type="number" step="0.01" name="price_ht" class="form-control" value="{{ price_ht }}">
						</div>
						<div class="col">
							<label class="form-label">Prix TTC</label>
							<input type="number" step="0.01" name="price_ttc" class="form-control" value="{{ price_ttc }}">
						</div>
					</div>
				</div>

				<div class="col-md-6">
					<div class="mb-3">
						<label class="form-label">Description</label>
						<textarea name="description" rows="4" class="form-control">{{ description }}</textarea>
					</div>

					<div class="mb-3">
						<label class="form-label">Caractéristiques techniques</label>
						<div id="attributes-container">
							{% for key, value in attributes %}
								<div class="row g-2 mb-2 attribute-row">
									<div class="col-5">
										<input type="text" name="attribute_keys[]" class="form-control" value="{{ key }}">
									</div>
									<div class="col-6">
										<input type="text" name="attribute_values[]" class="form-control" value="{{ value }}">
									</div>
									<div class="col-1 d-flex align-items-center">
										<button type="button" class="btn btn-outline-danger btn-sm btn-remove-attribute">
											<i class="fa fa-times"></i>
										</button>
									</div>
								</div>
							{% else %}
								<div class="row g-2 mb-2 attribute-row">
									<div class="col-5">
										<input type="text" name="attribute_keys[]" class="form-control">
									</div>
									<div class="col-6">
										<input type="text" name="attribute_values[]" class="form-control">
									</div>
									<div class="col-1 d-flex align-items-center">
										<button type="button" class="btn btn-outline-danger btn-sm btn-remove-attribute">
											<i class="fa fa-times"></i>
										</button>
									</div>
								</div>
							{% endfor %}
						</div>

						<button type="button" id="add-attribute" class="btn btn-sm btn-outline-primary mt-1">
							<i class="fa fa-plus me-1"></i>Ajouter
						</button>
					</div>

					<div class="mb-3">
						<label class="form-label">Images existantes</label>

						{% set imgs = product.images ?? [] %}

						{% if imgs is not empty %}
							<div class="row g-2">
								{% for url in imgs %}
									<div class="col-6 col-md-4 col-lg-3">
										<div class="border rounded p-2 h-100 d-flex flex-column gap-2">
											<div class="ratio ratio-1x1 bg-dark rounded overflow-hidden">
												<img src="{{ url }}" alt="Image produit" style="width:100%; height:100%; object-fit:cover;">
											</div>

											<div class="d-flex align-items-center justify-content-between gap-2">
												<a class="btn btn-sm btn-outline-secondary" href="{{ url }}" target="_blank" rel="noopener">
													<i class="fa fa-external-link-alt"></i>
												</a>

												<label class="btn btn-sm btn-outline-danger m-0">
													<input type="checkbox" class="d-none" name="remove_images[]" value="{{ url }}">
													<i class="fa fa-trash"></i>
													Suppr.
												</label>
											</div>

											<div class="text-muted small" style="word-break:break-all;">
												{{ url }}
											</div>
										</div>
									</div>
								{% endfor %}
							</div>

							<small class="text-muted d-block mt-2">
								Coche “Suppr.” pour retirer une image du produit (et optionnellement supprimer le fichier du serveur).
							</small>
						{% else %}
							<div class="text-muted">Aucune image enregistrée.</div>
						{% endif %}
					</div>

					<div class="mb-3">
						<label class="form-label">Ajouter des images</label>
						<input type="file" name="images[]" class="form-control" multiple accept="image/*">
					</div>
				</div>
			</div>

			<div class="mt-3">
				<button class="btn btn-primary">
					<i class="fa fa-save me-1"></i>Mettre à jour
				</button>
				<a href="{{ path('admin_catalog_products_index') }}" class="btn btn-secondary">Retour</a>
			</div>

		</form>
	</div>
{% endblock %}

{% block body_javascript %}
	{{ parent() }}
	<script src="{{ asset('assets/js/catalog-attributes.js') }}"></script>
{% endblock %}
