{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title 'Produits (MongoDB)' %}

{% block content %}
    <a class="btn btn-primary mb-3" href="{{ path('admin_catalog_products_create') }}">Nouveau produit</a>
    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Slug</th>
            <th>Actif</th>
            <th>Variantes</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.slug }}</td>
                <td>{{ product.isActive ? 'Oui' : 'Non' }}</td>
                <td>{{ product.variants|length }}</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-secondary" href="{{ path('admin_catalog_products_edit', {id: product.id}) }}">Ã‰diter</a>
                    <a class="btn btn-sm btn-info" href="{{ path('admin_catalog_products_stocks', {id: product.id}) }}">Stocks</a>
                    <form action="{{ path('admin_catalog_products_delete', {id: product.id}) }}" method="post" style="display:inline-block" onsubmit="return confirm('Supprimer ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete_product_' ~ product.id) }}">
                        <button class="btn btn-sm btn-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="5">Aucun produit</td></tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
